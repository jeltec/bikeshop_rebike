<div id="addbike" class="jumbotron" align="center">
    <h1>Donate a bike</h1>

    <p>{{ message }}</p>

    <div ng-controller="addbikeController">
        <div class="card" style="height: 400px; width: 70%;">
                <form ng-submit="addBike()" style="vertical-align: middle" align="center">
                    <div class="form-group" align="center">
                        <input type="text"
                               ng-model="formData.brand"
                               class="form-control"
                               id="brand"
                               placeholder="Brand input"
                               ng-style="{'width': 150 + 'px'}"required>
                    </div>
                    <div class="form-group" align="center">
                        <select id="type"
                                ng-model="formData.bikeOptions"
                                class="form-control"
                                ng-show="formData.bikeOptions"
                                ng-options="option.name for option in toptions"
                                ng-style="{'width': 150 + 'px'}">
                        </select>
                    </div>
                    <div class="form-group" align="center">
                        <select ng-model="formData.genderOptions"
                                class="form-control"
                                ng-show="formData.genderOptions"
                                ng-options="option.name for option in goptions"
                                ng-style="{'width': 150 + 'px'}">
                        </select>
                    </div>
                    <div class="form-group" align="center">
                        <input type="number"
                               id="year"
                               class="form-control"
                               placeholder="Year"
                               ng-model="formData.year"
                               ng-style="{'width': 150 + 'px'}"/>
                        <div class="invalid-feedback">
                            Please provide a valid year.
                        </div>
                    </div>
                    <button id="donatebtn" type="submit" class="btn btn-danger" id="submit" data-toggle="snackbar" data-content="{{thanks}} <a href='#addbike' class='btn btn-danger'>Donate again</a> <button class='btn btn-danger'>x</button" data-html-allowed="true" data-timeout="0">Donate</button>
                </form>
        </div>
    </div>
</div>